import org.overengineer.talelistener.channel.common.LibraryType;

-- This file defines the `libraries` table and related queries.

CREATE TABLE libraries (
  id TEXT NOT NULL PRIMARY KEY,
  title TEXT NOT NULL,
  type TEXT AS LibraryType NOT NULL
);

upsertLibraries:
INSERT OR REPLACE INTO libraries (id, title, type)
VALUES (?, ?, ?);

fetchLibrary:
SELECT * FROM libraries
WHERE id = ?;

fetchLibraries:
SELECT * FROM libraries;
